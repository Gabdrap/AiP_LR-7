#include <iostream>
#include <Windows.h>

using namespace std;
bool a;
bool b;
bool c;
bool r1;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int choise;
    cout << "1" "\n";
    cout << "2" "\n";
    cout << "3" "\n";
    cout << "Выберите задание" "\n";
    cin >> choise;

    if (choise == 1)
    {
        int choise1;
        cout << "1. а" "\n";
        cout << "2. б" "\n";
        cout << "3. в" "\n";
        cout << "4. г" "\n";
        cout << "Выберите задание" "\n";
        cin >> choise1;
        if (choise1 == 1)
        {
            cout << "Введите значение A: ";
            cin >> a;
            cout << "Введите значение B: ";
            cin >> b;
            cout << "Введите значение C: ";
            cin >> c;
            bool r1 = a || b && c;
            if (r1 == true)
            {
                cout << "Значение выражения: True";
            }
            else
            {
                cout << "Значение выражения: False";
            }
        }
        
        if (choise1 == 2)
        {
            cout << "Введите значение A: ";
            cin >> a;
            cout << "Введите значение B: ";
            cin >> b;
            cout << "Введите значение C: ";
            cin >> c;
            bool r1 = !(b || a || c);
            if (r1 == true)
            {
                cout << "Значение выражения: True";
            }
            else
            {
                cout << "Значение выражения: False";
            }
        }

        if (choise1 == 3)
        {
            cout << "Введите значение A: ";
            cin >> a;
            cout << "Введите значение B: ";
            cin >> b;
            cout << "Введите значение C: ";
            cin >> c;
            bool r1 = a && !b || c;
            if (r1 == true)
            {
                cout << "Значение выражения: True";
            }
            else
            {
                cout << "Значение выражения: False";
            }
        }

        if (choise1 == 4)
        {
            cout << "Введите значение A: ";
            cin >> a;
            cout << "Введите значение B: ";
            cin >> b;
            cout << "Введите значение C: ";
            cin >> c;
            bool r1 = !a && (!b || c);
            if (r1 == true)
            {
                cout << "Значение выражения: True";
            }
            else
            {
                cout << "Значение выражения: False";
            }
        }
    }
}
